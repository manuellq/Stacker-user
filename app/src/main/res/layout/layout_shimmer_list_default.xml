        <include layout="@layout/layout_shimmer_item_default"/>
        <include layout="@layout/layout_shimmer_item_default"/>
        <include layout="@layout/layout_shimmer_item_default"/>
        <include layout="@layout/layout_shimmer_item_default"/>
        <include layout="@layout/layout_shimmer_item_default"/>
    </LinearLayout>
</io.supercharge.shimmerlayout.ShimmerLayout>